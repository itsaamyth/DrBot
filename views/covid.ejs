    <main>
        <section>
            <div class="container-fluid">
              <div  class="row">
                <div id="poster2">
               <div class="col-md-7 col-sm-7 col-xs-7" >
               <h3 id="hello3">Welcome Back !</h3>
               <!-- <hr id="hr"> -->
               <h6>Have a look on Corona Cases Updates</h6>
               <h4 style="font-weight: bold;">DrBot COVID-19 Tracker</h4>
               <div id="statsrow">
               <div class="card border-0" id="stats">
                <div class="card-body">
                    <div class="total-cases2">
                        <div id="tc" class="title">Total Cases</div>
                        <div id="val" style="color: #0a58ca;" class="value">0</div>
                        <hr>
                        <div id="newVal" class="new-value" >0</div>
                      </div>
                </div>
              </div>

              <div class="card border-0" id="stats">
                <div class="card-body">
                    <div class="recovered2">
                        <div id="tc" class="title">Recovered</div>
                        <div id="val" style="color: green;" class="value">0</div>
                        <hr>
                        <div id="newVal" class="new-value">0</div>
                      </div>
                </div>
              </div>

              <div class="card border-0" id="stats">
                <div class="card-body">
                    <div class="deaths2">
                        <div id="tc" class="title">Deaths</div>
                        <div id="val" style="color: red;" class="value">0</div>
                        <hr>
                        <div id="newVal" class="new-value">0</div>
                      </div>
                </div>
              </div>
              </div>   
               </div>
               <div class="col-md-5 col-sm-5 col-xs-5">
                <img id="banner2" src="../public/images/covid.jpg">
               </div>
             </div>
            </div>
          </div>
        </section>
      <div class="stats">
        <div class="latest-report">
          <div class="country">
            <div class="name">Loading...</div>
            <div class="change-country">change</div>
            <div class="search-country hide">
              <div class="search-box">
                <input
                  type="text"
                  id="search-input"
                  placeholder="Search Country..."
                />
                <img class="close" src="../public/images/close.svg" alt="" />
              </div>
              <div class="country-list"></div>
            </div>
          </div>
          <div class="total-cases">
            <div class="title">Total Cases</div>
            <div class="value">0</div>
            <div class="new-value">0</div>
          </div>
          <div class="recovered">
            <div class="title">Recovered</div>
            <div class="value">0</div>
            <div class="new-value">0</div>
          </div>
          <div class="deaths">
            <div class="title">Deaths</div>
            <div class="value">0</div>
            <div class="new-value">0</div>
          </div>
        </div>
        <div class="chart">
          <canvas id="axes_line_chart"></canvas>
        </div>
      </div>
    </main>

